generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URI")
}

model User {
  Id           String         @id @default(uuid())
  name         String
  email        String         @unique
  phone        String
  organization String
  place        String
  address      String
  password     String
  adstractForm AbstractForm[]
}

model AbstractForm {
  id                    String   @id @default(uuid())
  userId                String
  user                  User     @relation(fields: [userId], references: [Id])
  title                 String
  author                String
  abstract              String
  keywords              String
  preferredPresentation Type     @default(Oral)
  conferenceTheme       String
  conflictOfInterest    Conflict
  createdAt             DateTime @default(now())
  updatedAt             DateTime @updatedAt
}

enum Conflict {
  Yes
  No
}

enum Type {
  Oral
  Poster
}
